<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Home">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="33dp"
        android:layout_marginBottom="14dp"
        android:text="home"
        app:layout_constraintBottom_toTopOf="@+id/iduser"
        app:layout_constraintStart_toStartOf="@+id/iduser"
        app:layout_constraintTop_toBottomOf="@+id/chatPic" />

    <TextView
        android:id="@+id/iduser"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginStart="135dp"
        android:layout_marginBottom="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <ImageButton
        android:id="@+id/homePic"
        android:layout_width="191dp"
        android:layout_height="0dp"
        android:layout_marginStart="97dp"
        android:layout_marginTop="73dp"
        android:layout_marginBottom="23dp"
        android:background="@drawable/home"
        app:layout_constraintBottom_toTopOf="@+id/profilePic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/home" />

    <ImageButton
        android:id="@+id/profilePic"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/user"
        app:layout_constraintBottom_toTopOf="@+id/chatPic"
        app:layout_constraintEnd_toEndOf="@+id/homePic"
        app:layout_constraintStart_toStartOf="@+id/chatPic"
        app:layout_constraintTop_toBottomOf="@+id/homePic"
        tools:srcCompat="@drawable/user" />


    <ImageButton
        android:id="@+id/chatPic"
        android:layout_width="193dp"
        android:layout_height="0dp"
        android:layout_marginStart="98dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/chat"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profilePic"
        tools:srcCompat="@drawable/chat" />

</androidx.constraintlayout.widget.ConstraintLayout>